---
const { overall_status } = Astro.props;
---

<div
    class={`rounded-2xl p-6 mb-12 ${overall_status === "operational" ? "bg-emerald-500/10 border border-emerald-500/20" : "bg-amber-500/10 border border-amber-500/20"}`}
>
    <div
        class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 sm:gap-0"
    >
        <div class="flex items-center gap-4">
            <div
                class={`w-4 h-4 rounded-full ${overall_status === "operational" ? "bg-emerald-500" : overall_status === "degraded" ? "bg-amber-500" : "bg-rose-500"} animate-pulse`}
            >
            </div>
            <div>
                <span class="text-xl font-semibold" data-overall-status>
                    {
                        overall_status === "operational"
                            ? "All Systems Operational"
                            : "Some Systems Degraded"
                    }
                </span>
                <p class="text-sm text-slate-400 mt-1 hidden" data-location></p>
            </div>
        </div>
        <span class="text-xs text-slate-500" data-timestamp></span>
    </div>
</div>
