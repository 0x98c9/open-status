---
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-slate-800 bg-slate-950/50 backdrop-blur-sm">
    <div class="container mx-auto px-4 py-8 max-w-3xl">
        <div
            class="flex flex-col md:flex-row items-center justify-between gap-4"
        >
            <!-- Left: Branding -->
            <div>
                <p class="text-sm font-semibold text-slate-200">Open Status</p>
                <p class="text-xs text-slate-500">Real-time monitoring</p>
            </div>

            <!-- Center: Links -->
            <div class="flex items-center gap-6 text-sm">
                <a
                    href="https://github.com/0x98c9/open-status"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 text-slate-400 hover:text-slate-200 transition-colors"
                >
                    <svg
                        viewBox="0 0 16 16"
                        fill="currentColor"
                        class="w-4 h-4"
                    >
                        <path
                            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
                        ></path>
                    </svg>
                    GitHub
                </a>
                <a
                    href="/api/status"
                    class="text-slate-400 hover:text-slate-200 transition-colors"
                >
                    API
                </a>
                <a
                    href="https://docs.astro.build"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-slate-400 hover:text-slate-200 transition-colors"
                >
                    Docs
                </a>
            </div>

            <!-- Right: Copyright -->
            <div class="text-xs text-slate-500">
                © {currentYear} Open Status
            </div>
        </div>

        <!-- Bottom: Tech Stack -->
        <div
            class="mt-6 flex items-center justify-center gap-2 text-xs text-slate-600"
        >
            <span>Built with</span>
            <a
                href="https://astro.build"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-500 hover:text-slate-400 transition-colors font-medium"
            >
                Astro
            </a>
            <span>•</span>
            <a
                href="https://tailwindcss.com"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-500 hover:text-slate-400 transition-colors font-medium"
            >
                Tailwind
            </a>
            <span>•</span>
            <span class="text-slate-500">Deployed on</span>
            <a
                href="https://pages.cloudflare.com"
                target="_blank"
                rel="noopener noreferrer"
                class="text-slate-500 hover:text-slate-400 transition-colors font-medium"
            >
                Cloudflare Pages
            </a>
        </div>
    </div>
</footer>
