---
import statusData from "../data/status.json";
import "../styles/global.css";
import Header from "../components/Header.astro";
import OverallStatus from "../components/OverallStatus.astro";
import ServiceList from "../components/ServiceList.astro";
import IncidentList from "../components/IncidentList.astro";
import Footer from "../components/Footer.astro";

const {
	title,
	description,
	overall_status,
	services,
	incidents,
	repo_url,
	version,
} = statusData as any;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="bg-slate-950 text-slate-50 font-['Inter'] antialiased min-h-screen flex flex-col"
	>
		<main class="flex-grow container mx-auto px-4 py-8 max-w-3xl">
			<Header
				title={title}
				description={description}
				version={version}
				repo_url={repo_url}
			/>
			<OverallStatus overall_status={overall_status} />
			<ServiceList services={services} />
			<IncidentList incidents={incidents} />
		</main>
		<Footer />
	</body>
</html>
